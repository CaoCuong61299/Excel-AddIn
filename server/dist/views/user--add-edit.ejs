
<%- include('inc/print-error-list', { errors }); %>


<div class="row">
	<form id="the-form" method="post" class="col-md-8 col-lg-6">
		<input type="hidden" name="submitted" value="1" />

		<div class="mb-3">
			<label class="form-label fw-bold" for="username">Tên đăng nhập:</label>
			<input id="username" type="text" class="form-control" name="username" value="<%= params.username ? params.username : '' %>" autofocus />
		</div>

		<div class="mb-3">
			<label class="form-label fw-bold" for="full-name">Họ tên:</label>
			<input id="full-name" type="text" class="form-control" name="fullName" value="<%= params.fullName ? params.fullName : '' %>" />
		</div>

		<div class="mb-3">
			<label class="form-label fw-bold" for="email">Email:</label>
			<input id="login" type="text" class="form-control" name="email" value="<%= params.email ? params.email : '' %>" />
		</div>

		<div class="mb-3">
			<label class="form-label fw-bold" for="password">Mật khẩu:</label>
			<input id="password" type="password" class="form-control" name="password" />

			<% if (edit) { %>
				<small class="form-text text-muted">Bỏ trống nếu không thay đổi.</small>
			<% } %>
		</div>

		<div class="mb-3">
			<label class="form-label fw-bold">Bộ phận:</label>
			<% for (const e of divisionList) { %>
				<div class="form-check form-switch">
					<input type="checkbox" class="form-check-input" id="division-<%= e.id %>" name="divisions[]" value="<%= e.id %>" <%= params.divisions.includes(e.id) ? 'checked' : '' %>>
					<label class="form-check-label" for="division-<%= e.id %>"><%= e.name %></label>
				</div>
			<% } %>
		</div>

		<div class="mb-3">
			<label class="form-label fw-bold">Nhóm tài khoản:</label>
			<% for (const e of userGroupList) { %>
				<div class="form-check form-switch">
					<input type="checkbox" class="form-check-input" id="user-group-<%= e.id %>" name="groups[]" value="<%= e.id %>" <%= params.groups.includes(e.id) ? 'checked' : '' %>>
					<label class="form-check-label" for="user-group-<%= e.id %>"><%= e.name %></label>
				</div>
			<% } %>
		</div>

		<button type="submit" class="btn btn-primary"><%= edit ? 'Cập nhật' : 'Tạo tài khoản' %></button>
		<button type="button" class="btn btn-secondary" onclick="javascript:history.go(-1)">Quay về</button>
	</form>
</div>
