<% if (list.length == 0) { %>
	<p class="alert alert-warning">Không có nhóm nào.</p>
<% } else { %>
	<div class="list-group">
		<% for (const item of list) { %>
			<a class="list-group-item list-group-item-action flex-column align-items-start" href="<%= utils.makeUrl(`/user-group/${item['id']}`) %>">
				<div class="d-flex w-100 justify-content-between">
					<h5 class="mb-1"><%= item.name %></h5>
				</div>
				<p><%= item.description %></p>
				<p class="mb-1">
					<span class="badge bg-primary rounded-pill"><%= item.users %> tài khoản</span>
				</p>
			</a>
		<% } %>
	</div>
<% } %>