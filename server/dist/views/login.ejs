
<style>
#login-form {
	margin: auto;
	max-width: 30rem;
}
</style>


<%- include('inc/print-error-list', { errors }) %>

<form id="login-form" action="<%= utils.makeUrl('/login') %>" method='post'>

	<% if (params.backUrl) { %>
		<input type='hidden' name='backUrl'  value="<%= params.backUrl %>" />
	<% } %>

	<div class="card">
		<div class="card-header">
			<h5 class="my-0">Đăng nhập</h5>
		</div>

		<div class="card-body p-3">
			<div class="input-group mb-2">
				<div class="input-group-text"><i class="fa fa-fw fa-user text-info"></i></div>
				<input class="form-control" type="text" name="username" placeholder="Tên đăng nhập" required autofocus value="<%= params.username ? params.username : '' %>" />
			</div>

			<div class="input-group mb-2">
				<div class="input-group-text"><i class="fa fa-fw fa-key text-info"></i></div>
				<input class="form-control" type='password' name='password' placeholder='Mật khẩu' required />
			</div>

			<div class="form-check form-switch">
				<input type="checkbox" class="form-check-input" id="remember2" name="remember" value="ON">
				<label class="form-check-label" for="remember2">Nhớ đăng nhập</label>
			</div>
		</div>

		<div class="card-footer text-end">
			<button class="btn btn-primary my-0" type="submit">OK</button>
		</div>
	</div>
</form>

